stencil laplacian(float grid U(0 .. x_max, 0 .. y_max,0 .. z_max))
{
	domainsize = (1 .. x_max-1, 1 .. y_max-1, 1 .. z_max-1);
	
	
	initial
	{
	
		U[x ,y ,z; 0] = 1;
		
	}
	
	operation 
	{
		U[x, y, z; t+1] =
			1 * U[x, y, z; t] +
			1 * (
				U[x+1, y, z; t] + U[x-1, y, z; t] +
				U[x, y+1, z; t] + U[x, y-1, z; t] +
				U[x, y, z+1; t] + U[x, y, z-1; t]
			);
	}
}
