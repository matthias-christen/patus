		)
		.
		
		
	IntegerLiteral<out int nValue> =
		integer                                                                (. nValue = Integer.parseInt (t.val); .)
		.
		
	FloatLiteral<out double fValue> =                                          (. StringBuilder sb = new StringBuilder (); .)
		[
			integer                                                            (. sb.append (t.val); .)
		]
		[
			'.'                                                                (. sb.append (t.val); .)
			[
				integer                                                        (. sb.append (t.val); .)
			]
		]
		/*[
			'e'                                                                (. sb.append (t.val); .)
			[
				'+'                                                            (. sb.append (t.val); .)
				|
				'-'                                                            (. sb.append (t.val); .)
			]
			integer                                                            (. sb.append (t.val); .)
		]*/                                                                      (. fValue = Double.parseDouble (sb.toString ()); .)
		.
		
